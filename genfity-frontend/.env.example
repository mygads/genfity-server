# ===========================================
# Genfity Frontend Configuration
# ===========================================

# Application Configuration
PORT=8050
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8090
NEXT_PUBLIC_APP_NAME=Genfity Digital Solutions

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:8050
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# External Services URLs
NEXT_PUBLIC_WHATSAPP_API_URL=http://localhost:8080
NEXT_PUBLIC_CHAT_AI_API_URL=http://localhost:8070

# Theme and UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Analytics and Tracking (if needed)
# NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-id
# NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/genfity
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/genfity
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/genfity
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/genfity

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=info@genfity.com
NEXT_PUBLIC_CONTACT_PHONE=+62-xxx-xxxx-xxxx
NEXT_PUBLIC_CONTACT_ADDRESS=Jakarta, Indonesia

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true
