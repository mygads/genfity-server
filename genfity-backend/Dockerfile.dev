# Development Dockerfile for genfity-backend
FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    postgresql-client \
    curl \
    git

# Install global packages
RUN npm install -g prisma

# Create non-root user with the same ID as the host
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy package files first for better Docker caching
COPY package*.json ./

# Install dependencies as root, then change ownership
RUN npm ci

# Copy the application code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Set proper permissions for the entire app directory
RUN chown -R nextjs:nodejs /app

# Switch to non-root user
USER nextjs

# Create .next directory with proper permissions
RUN mkdir -p .next && chmod 755 .next

# Expose port
EXPOSE 8090

ENV PORT 8090
ENV NODE_ENV development

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8090/api/health || exit 1

# Startup script that waits for database and runs migrations
CMD ["sh", "-c", "echo 'Waiting for PostgreSQL...' && until pg_isready -h genfity-db-postgres -p 5432 -U $DB_USER; do sleep 2; done && echo 'Running migrations...' && npx prisma migrate deploy && echo 'Starting development server...' && npm run dev"]
