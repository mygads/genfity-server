# ===========================================
# Environment Configuration
# ===========================================

# Database Configuration
DB_USER=genfity_user
DB_PASSWORD=genfity_password
DB_NAME=genfity_db

# Timezone
TZ=Asia/Jakarta

# ===========================================
# SSL & Domain Configuration (Production Only)
# ===========================================

# Replace with your actual domains
WUZAPI_DOMAIN=wuzapi.yourdomain.com
EVENTAPI_DOMAIN=eventapi.yourdomain.com

# Your email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=your-email@domain.com

# ===========================================
# Application Specific Configuration
# ===========================================

# WuzAPI Configuration
WUZAPI_ADMIN_TOKEN=your_secure_admin_token_here
WEBHOOK_FORMAT=json
SESSION_DEVICE_NAME=WuzAPI

# Event API Configuration
WEBHOOK_VERIFY_TOKEN=your_secure_webhook_token_here

# ===========================================
# Port Configuration (Development)
# ===========================================
WUZAPI_PORT=8080
EVENTAPI_PORT=8081
